        }
      ],
      temaClasse: "tema-reflexao"
    }
  };

  // Alterna tema claro/escuro
  function toggleTheme() {
    document.documentElement.classList.toggle('dark');
  }

  // Volta ao topo da p√°gina suavemente
  function voltarAoTopo() {
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }

  // Trocar fundo via prompt
  function alterarFundo() {
    const url = prompt('Digite a URL da imagem de fundo:');
    if (url) {
      document.body.style.background = `url('${url}') no-repeat center center fixed`;
      document.body.style.backgroundSize = 'cover';
    }
  }

  // Renderiza poesias na div #conteudo baseado na categoria
  function renderizarCategoria(cat) {
    const container = document.getElementById('conteudo');
    if (!poesias[cat]) {
      container.innerHTML = `<p class="text-center text-red-600">Categoria n√£o encontrada.</p>`;
      return;
    }
    const data = poesias[cat];
    document.getElementById('conteudo-wrapper').className = `content-wrapper ${data.temaClasse}`;
    let html = `<h2 class="text-3xl font-bold mb-6">${data.titulo}</h2>`;
    data.artigos.forEach((art, idx) => {
      html += `
        <article class="mb-10">
          <h3 class="text-2xl font-semibold mb-2">${art.titulo}</h3>
          <p class="mb-4 leading-relaxed" style="white-space: pre-wrap;">${art.texto}</p>
          <button onclick="voltarAoTopo()" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Voltar ao topo</button>
        </article>
      `;
    });
    container.innerHTML = html;
  }

  // Atualiza conte√∫do conforme hash da URL
  function atualizarConteudoPorHash() {
    const hash = location.hash.replace('#','') || 'amor';
    renderizarCategoria(hash);
  }

  // Configura√ß√£o inicial
  window.addEventListener('load', () => {
    atualizarConteudoPorHash();
    // Atualiza conte√∫do se hash mudar (ex: clicar nos links)
    window.addEventListener('hashchange', atualizarConteudoPorHash);
  });
</script>
